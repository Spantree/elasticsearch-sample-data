{
  "settings": {
    "analysis": {
      "filter": {
        "edge_left": {
          "type": "edgeNGram",
          "side": "front",
          "min_gram": 1,
          "max_gram": 20
        },
        "alpha_space": {
          "type": "pattern_replace",
          "pattern": "[^a-zA-Z0-9\\s]",
          "replacement": ""
        },
        "text_delimiter": {
          "type": "word_delimiter",
          "generate_word_parts": true,
          "catenate_words": true,
          "preserve_original": true,
          "stem_english_possessive": true
        },
        "first_name_synonyms": {
          "type": "synonym",
          "synonyms": [
            "fred, frederick",
            "ed, edward"
          ]
        },
        "snowball_stemmed": {
          "type": "snowball",
          "language": "English"
        }
      },
      "analyzer": {
        "edge_left": {
          "type": "custom",
          "filter": [
            "standard",
            "asciifolding",
            "lowercase",
            "stop",
            "edge_left"
          ],
          "tokenizer": "standard"
        },
        "sortable": {
          "type": "custom",
          "filter": [
            "asciifolding",
            "lowercase",
            "alpha_space"
          ],
          "tokenizer": "keyword"
        },
        "text_delimited": {
          "type": "custom",
          "filter": [
            "standard",
            "asciifolding",
            "lowercase",
            "stop",
            "text_delimiter"
          ],
          "tokenizer": "standard"
        },
        "stemmed": {
          "type": "custom",
          "filter": [
            "standard",
            "asciifolding",
            "lowercase",
            "stop",
            "snowball_stemmed"
          ],
          "tokenizer": "standard"
        },
        "synonyms": {
          "type": "custom",
          "filter": [
            "standard",
            "asciifolding",
            "lowercase",
            "stop",
            "first_name_synonyms"
          ],
          "tokenizer": "standard"
        }
      }
    }
  },
  "mappings": {
    "locations": {
      "properties": {
        "name": {
          "type": "multi_field",
          "fields": {
            "name": {
              "type": "string",
              "index": "analyzed"
            },
            "sortable" : {
              "type" : "string",
              "analyzer" : "sortable",
              "include_in_all" : false
            },
            "edge" : {
              "type" : "string",
              "index_analyzer" : "edge_left",
              "search_analyzer" : "standard",
              "include_in_all" : false
            },
            "stemmed" : {
              "type" : "string",
              "analyzer" : "stemmed",
              "include_in_all" : false
            },
            "synonyms": {
              "type": "string",
              "analyzer": "synonyms"
            }
          }
        },
        "keywords": {
          "type" : "multi_field",
          "fields": {
            "keywords":{
              "type": "string",
              "index": "analyzed"
            },
            "sortable" : {
              "type" : "string",
              "analyzer" : "sortable",
              "include_in_all" : false
            },
            "edge" : {
              "type" : "string",
              "index_analyzer" : "edge_left",
              "search_analyzer" : "standard",
              "include_in_all" : false
            },
            "facet" : {
              "type" : "string",
              "index" : "not_analyzed",
              "omit_norms" : true,
              "index_options" : "docs",
              "include_in_all" : false
            },
            "stemmed" : {
              "type" : "string",
              "analyzer" : "stemmed",
              "include_in_all" : false
            }
          }
        },
        "description": {
          "type": "multi_field",
          "fields": {
            "description": {
              "type": "string",
              "index": "analyzed"
            },
            "edge" : {
              "type" : "string",
              "index_analyzer" : "edge_left",
              "search_analyzer" : "standard",
              "include_in_all" : false
            },
            "stemmed" : {
              "type" : "string",
              "analyzer" : "stemmed",
              "include_in_all" : false
            },
            "synonyms": {
              "type": "string",
              "analyzer": "synonyms"
            }
          }
        },
        "about": {
          "type": "multi_field",
          "fields": {
            "about": {
              "type": "string",
              "index": "analyzed"
            },
            "edge" : {
              "type" : "string",
              "index_analyzer" : "edge_left",
              "search_analyzer" : "standard",
              "include_in_all" : false
            },
            "stemmed" : {
              "type" : "string",
              "analyzer" : "stemmed",
              "include_in_all" : false
            },
            "synonyms": {
              "type": "string",
              "analyzer": "synonyms"
            }
          }
        },
        "coordinates": {
          "type": "geo_point"
        }
      }
    }
  }
}